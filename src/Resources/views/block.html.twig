{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">
                {% if settings.translation_domain %}
                    {{ settings.text|trans({}, settings.translation_domain) }}
                {% else %}
                    {{ settings.text }}
                {% endif %}
            </h3>
        </div>
        <div class="box-body">
            <table class="table">
            {% for term in terms %}
                <tr><td>{{ term.label }}</td><td>{{ term.hits }}</td>{% if term.link is defined %}<td><a href="{{ term.link }}">See</a></td>{% endif %}</tr>
            {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}